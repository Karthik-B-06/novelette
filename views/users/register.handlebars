<div class="container1">
  <div class="info">
    <h1 align="center" class="lead">Register</h1>
  </div>
</div>
<div class="form">
  <div class="thumbnail"><img src="/img/add-user.svg"/></div>
  <form action="/users/register" method="POST" class="login-form">
    <input type="text" name="username" placeholder="name" value="{{name}}" required/>
    <input type="email" name="email" placeholder="username@mail.com" value="{{email}}" required/>
    <input type="password" name="password1" placeholder="password" required/>
    <input type="password" name="password2" placeholder="confirm password" required/>

    <button type="submit">register</button>
  </form>
</div>
</div>